generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  admin Boolean
}

model Table {
  id     Int    @id @default(autoincrement())
  number Int
  bills  Bill[]   
}

model Product {
  id     Int     @id @default(autoincrement())
  name   String
  price  Float
  type   String
  bills  Bill[]  
}

model Bill {
  id      Int      @id @default(autoincrement())
  name    String
  amount  Float
  tableId Int
  table   Table    @relation(fields: [tableId], references: [id])
  products Product[]  
}


