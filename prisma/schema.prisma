generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  cpf   String @unique
  admin Boolean
}

model Table {
  id     Int    @id @default(autoincrement())
  num  Int 
  oppening DateTime @default(now())
  bills  Bill[]
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
  type  String
  bills Bill[]
}

model Bill {
  id       Int       @id @default(autoincrement())
  name     String
  amount   Float
  tableId  Int
  table    Table     @relation(fields: [tableId], references: [id])
  products Product[]
}

model ProductBill{
  id       Int       @id @default(autoincrement())
  billId Int
  productId Int
}